# React Frontend Environment Variables Example - COMPREHENSIVE SETUP
# Copy this file to .env and fill in your actual values

# ========================================
# FIREBASE CONFIGURATION - FRONTEND WEB SDK
# ========================================
# Get these values from Firebase Console -> Project Settings -> General -> Your apps
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Legacy React App variables (for backward compatibility)
REACT_APP_apiKey=your_firebase_api_key_here
REACT_APP_authDomain=your-project.firebaseapp.com
REACT_APP_projectId=your-project-id
REACT_APP_storageBucket=your-project.firebasestorage.app
REACT_APP_messagingSenderId=your_messaging_sender_id
REACT_APP_appId=your_firebase_app_id
REACT_APP_measurementId=your_measurement_id

# ========================================
# API CONFIGURATION
# ========================================
# Backend API URL (change for production)
VITE_API_BASE_URL=http://127.0.0.1:8000/api
VITE_API_TIMEOUT=10000

# ========================================
# PAYMENT GATEWAY (RAZORPAY)
# ========================================
# Get from https://dashboard.razorpay.com/app/keys
# Use test keys for development, live keys for production
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_here

# ========================================
# DEVELOPMENT/ENVIRONMENT CONFIGURATION
# ========================================
VITE_NODE_ENV=development
VITE_DEBUG_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_CONSOLE=true

# ========================================
# APPLICATION METADATA
# ========================================
VITE_APP_NAME=Your App Name
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Your app description

# ========================================
# FEATURE FLAGS
# ========================================
VITE_ENABLE_GOOGLE_ANALYTICS=false
VITE_ENABLE_FIREBASE_ANALYTICS=false
VITE_ENABLE_DEVELOPMENT_MODE=true

# ========================================
# BUSINESS CONFIGURATION
# ========================================
VITE_BUSINESS_NAME=Your Business Name
VITE_BUSINESS_EMAIL=info@yourdomain.com
VITE_BUSINESS_PHONE=+91-XXXXXXXXXX
VITE_SUPPORT_EMAIL=support@yourdomain.com

# ========================================
# PRODUCTION OVERRIDES
# ========================================
# For production builds, set these:
# VITE_NODE_ENV=production
# VITE_DEBUG_MODE=false
# VITE_API_BASE_URL=https://yourdomain.com/api
# VITE_RAZORPAY_KEY_ID=rzp_live_your_live_key
