# Environment Variables Example for React Frontend
# Copy this file to .env and fill in your actual values

# Firebase Configuration - Frontend Web SDK (Get from Firebase Console)
VITE_FIREBASE_API_KEY=your_firebase_web_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=1:your_sender_id:web:your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Legacy React App variables (for backward compatibility - keep if transitioning from CRA)
REACT_APP_apiKey=your_firebase_web_api_key_here
REACT_APP_authDomain=your-project.firebaseapp.com
REACT_APP_projectId=your_firebase_project_id
REACT_APP_storageBucket=your-project.firebasestorage.app
REACT_APP_messagingSenderId=your_messaging_sender_id
REACT_APP_appId=1:your_sender_id:web:your_app_id
REACT_APP_measurementId=G-XXXXXXXXXX

# API Configuration
VITE_API_BASE_URL=http://127.0.0.1:8000
VITE_API_TIMEOUT=10000

# Development Mode
VITE_NODE_ENV=development
VITE_DEBUG_MODE=true

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_CONSOLE=true

# External Services
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_id_here

# App Configuration
VITE_APP_NAME=Your App Name
VITE_APP_VERSION=1.0.0
VITE_COPYRIGHT_YEAR=2025
VITE_COMPANY_NAME=Your Company Name

# Build Configuration
GENERATE_SOURCEMAP=false
